<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity" android:id="@+id/splashImage">

    <ImageView
            android:layout_width="135dp"
            android:layout_height="175dp" app:srcCompat="@drawable/temp_logo"
            android:id="@+id/splashImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.419" android:contentDescription="@string/app_symbol"/>
    <TextView
            android:text="@string/movie_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashTitleTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/splashImageView"
            app:layout_constraintStart_toStartOf="@+id/splashImageView"
            app:layout_constraintEnd_toEndOf="@+id/splashImageView" android:fontFamily="monospace"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.512" android:textAlignment="center"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>